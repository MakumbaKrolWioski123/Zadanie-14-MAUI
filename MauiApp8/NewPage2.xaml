<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp8.NewPage2"
             Title="MAUI 14.4">
    <VerticalStackLayout>
        <CollectionView ItemsSource="{Binding ShoppingItems}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout>
                        <Label Text="{Binding Name}" WidthRequest="120"/>
                        <Label Text="{Binding Quantity}" WidthRequest="50"/>
                        <Label Text="{Binding Price}" WidthRequest="50"/>
                        <Button
                            Text="UsuÅ„"
                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteItemCommand}"
                            CommandParameter="{Binding .}" />   
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Label
            Text="Total Sum:"
            FontSize="20"
            HorizontalOptions="Center"
        />
        <Label
            Text="{Binding TotalSum, Mode=OneWay}"
            FontSize="20"
            HorizontalOptions="Center"
        />
        <Label
            Text="Add New Item:"
            FontSize="24"
        />
        <Entry
            Placeholder="Item Name"
            Text="{Binding NewItemName, Mode=TwoWay}"
         />
        <Entry
            Placeholder="Quantity"
            Keyboard="Numeric"
            Text="{Binding NewItemQuantity, Mode=TwoWay}"
         />
        <Entry
            Placeholder="Price"
            Keyboard="Numeric"
            Text="{Binding NewItemPrice, Mode=TwoWay}"
         />
        <Button
            Text="Add Item"
            Command="{Binding AddItemCommand}"
        />
    </VerticalStackLayout>
</ContentPage>