<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp8.NewPage1"
             Title="MAUI 14.3">
    <VerticalStackLayout>
        <Slider
            Minimum="0"
            Maximum="3"
            VerticalOptions="Center"
            Value="{Binding Height, Mode=TwoWay}"
        />
        <Label
            Text="Height:"
            FontSize="24"
            HorizontalOptions="Center"
         />
        <Label
            Text="{Binding Height, Mode=OneWay}"
            FontSize="24"
            HorizontalOptions="Center"
        />
        <Slider
            Minimum="0"
            Maximum="200"
            VerticalOptions="Center"
            Value="{Binding Weight, Mode=TwoWay}"
        />
        <Label
            Text="Weight:"
            FontSize="24"
            HorizontalOptions="Center"
        />
        <Label
            Text="{Binding Weight, Mode=OneWay}"
            FontSize="24"
            HorizontalOptions="Center"
        />
        <Label
            Text="BMI:"
            FontSize="24"
            HorizontalOptions="Center"
        />
        <Label
            Text="{Binding Bmi, Mode=OneWay}"
            FontSize="24"
            HorizontalOptions="Center"
        />
        <Label
            Text="BMI Category:"
            FontSize="24"
            HorizontalOptions="Center"
        />
        <Label
            Text="{Binding BmiCategory, Mode=OneWay}"
            FontSize="24"
            HorizontalOptions="Center"
        />




    </VerticalStackLayout>
</ContentPage>